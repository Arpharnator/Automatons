<?xml version="1.0" encoding="utf-8" ?>
<Datatable xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xsi:noNamespaceSchemaLocation="../Schemas/HappinessStatusSetDefinition.xsd">
  <!-- Empire -->
  <HappinessStatusSetDefinition Name="HappinessStatusSetEmpireMavros" Class="ClassEmpire">
    <!-- In Rebellion -->
    <HappinessStatusDefinition Name="HappinessStatusEmpire0" MinValue="-1" MaxValue="15">
      <SimulationDescriptorReference Name="HappinessStatusEmpire0"/>
    </HappinessStatusDefinition>

    <!-- Unhappy -->
    <HappinessStatusDefinition Name="HappinessStatusEmpire1" MinValue="15" MaxValue="40">
      <SimulationDescriptorReference Name="HappinessStatusEmpire1"/>
    </HappinessStatusDefinition>

    <!-- Content -->
    <HappinessStatusDefinition Name="HappinessStatusEmpire2" MinValue="40" MaxValue="55">
      <SimulationDescriptorReference Name="HappinessStatusEmpire2"/>
    </HappinessStatusDefinition>

    <!-- Happy -->
    <HappinessStatusDefinition Name="HappinessStatusEmpire3" MinValue="55" MaxValue="85">
      <SimulationDescriptorReference Name="HappinessStatusEmpire3"/>
    </HappinessStatusDefinition>

    <!-- Ecstatic -->
    <HappinessStatusDefinition Name="HappinessStatusEmpire4" MinValue="85" MaxValue="-1">
      <SimulationDescriptorReference Name="HappinessStatusEmpire4"/>
    </HappinessStatusDefinition>
  </HappinessStatusSetDefinition>

  <!-- System -->
  <HappinessStatusSetDefinition Name="HappinessStatusSetStarSystemMavros" Class="ClassColonizedStarSystem">
    <!-- In Rebellion -->
    <HappinessStatusDefinition Name="HappinessStatusStarSystem0" MinValue="-1" MaxValue="15">
      <SimulationDescriptorReference Name="HappinessStatusStarSystem0"/>
    </HappinessStatusDefinition>

    <!-- Unhappy -->
    <HappinessStatusDefinition Name="HappinessStatusStarSystem1" MinValue="15" MaxValue="40">
      <SimulationDescriptorReference Name="HappinessStatusStarSystem1"/>
    </HappinessStatusDefinition>

    <!-- Content -->
    <HappinessStatusDefinition Name="HappinessStatusStarSystem2" MinValue="40" MaxValue="55">
      <SimulationDescriptorReference Name="HappinessStatusStarSystem2"/>
    </HappinessStatusDefinition>

    <!-- Happy -->
    <HappinessStatusDefinition Name="HappinessStatusStarSystem3" MinValue="55" MaxValue="85">
      <SimulationDescriptorReference Name="HappinessStatusStarSystem3"/>
    </HappinessStatusDefinition>

    <!-- Ecstatic -->
    <HappinessStatusDefinition Name="HappinessStatusStarSystem4" MinValue="85" MaxValue="-1">
      <SimulationDescriptorReference Name="HappinessStatusStarSystem4"/>
    </HappinessStatusDefinition>
  </HappinessStatusSetDefinition>
</Datatable>